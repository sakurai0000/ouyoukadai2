<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100, 100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>


          <td id="favorite_buttons_<%= @book.id %>">
            <%= render 'favorites/favorites', book: @book %>
          </td>
        
        <td class="book-comments-counter">
            <%= render "book_comments/counter", book: @book %></td>
        </tr>
        </table>
        <table class='table'>
        <tbody id="comment_list">
         <%=render"book_comments/comment_list",book: @book%>
        </tbody>
      </table>
       <div id="comment_form">
       <%=render"book_comments/comment_form",book: @book,comment: @comment%>
       </div>
    </div>
  </div>
</div>